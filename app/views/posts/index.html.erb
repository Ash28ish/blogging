<% if user_signed_in? %>
  <h1> <%= current_user.username %></h1>
  <p><%= link_to 'View My Posts', myposts_path %></p>
  <p><%= link_to 'New Post', new_post_path %></p>

<% else %>
  <p>Register to get started.</p>
  <p>
  <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
  </p>
<% end %>

<% if user_signed_in? && @count>0 %>
  <h2>Posts</h2>
  <table>
    <thead>
      <tr>  
        <th>Title</th>
        <th>Body</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>        
        <% @posts.each do |post| %>
          <tr>
            <% if post.user != current_user %>
              <td><%= post.title %></td>
              <td><%= post.body %></td>
              <td><%= post.user.username %></td>
              <td><%= link_to 'Show', post %></td>
            <% end %>
          </tr>
      <% end %>
    </tbody>
  </table>
<% end %> 
<br>

<% if user_signed_in? %>
  <p><%= link_to 'Log out', destroy_user_session_path, method: :delete %></p>
<% end %>
