


<p>
  <h2><%= @post.title %></h2>
</p>

<p>
  <%= @post.body %>
</p>
<br><br>

<h3> Comments </h3>

<% @post.comments.each do |comment| %>
  <% @userr  = comment.user %>
  <p> <%= comment.body %></p>
  <p> &nbsp -By <%= @userr.username %> </p>
  <br>
<% end %>

<br>
<h3>Add a comment:</h3>
<%= form_with(model: [@post,@post.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :Body %><br>
    <%= form.text_area :body %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>

<% if @post.user==current_user %>
    <%= link_to 'Edit', edit_post_path(@post) %> 
<% end %>
<%= link_to 'Back', posts_path %>
